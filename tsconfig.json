{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "checkJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "paths": {
      "@type*": ["./src/type"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./build/index.js"]
}
